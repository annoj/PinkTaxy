<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hwr.stud.pinkTaxy">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.CAMERA"/>

    // added for usage of camera
    <uses-feature android:name="android.hardware.camera" android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="hwr.stud.pinkTaxy.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="hwr.stud.pinkTaxy.LoginActivity" />
        <activity android:name="hwr.stud.pinkTaxy.SignupActivity" />
        <activity android:name="hwr.stud.pinkTaxy.StatsActivity" />
        <!--<activity android:name=".WelcomeActivity" />-->
        <activity android:name="hwr.stud.pinkTaxy.DonationActivity" />
        <activity android:name="hwr.stud.pinkTaxy.PrivateStatsActivity" />
        <activity android:name="hwr.stud.pinkTaxy.AddExpenseActitvity"></activity>
    </application>

</manifest>